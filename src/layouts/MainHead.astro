---
import "../styles/main.css";

interface Props {
	title?: string;
}

const { title = "SJE" } = Astro.props as Props;

const description =
	"Based in Malaysia, I'm a developer who strives to create fluent web apps engrossed in both front-end and back-end programming languages.";
---

<head>
	<meta charset="UTF-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<meta http-equiv="X-UA-Compatible" content="IE=7" />

	<title>{title}</title>
	<meta name="description" content="Personal portfolio website" />
	<meta name="author" content="SJE" />

	<!-- Meta Tages -->
	<meta property="og:title" content="SJE" />
	<meta property="og:url" content="sje.pages.dev" />
	<meta property="og:type" content="website" />
	<meta property="og:site_name" content="SJE" />
	<meta property="og:image:width" content="512" />
	<meta property="og:image:height" content="512" />
	<meta property="og:image:type" content="image/png" />
	<meta property="og:image:secure_url" content="https://sje.pages.dev/images/logo.png" />
	<meta property="og:image:alt" content="A logo featuring a stylized letter 'J' and a geometric design" />
	<meta property="og:description" content={description} />
	<meta property="og:image" content="/images/logo.png" />
	<meta name="twitter:card" content="summary_large_image" />
	<meta name="twitter:title" content="SJE" />
	<meta name="twitter:description" content={description} />
	<meta name="twitter:image" content="/images/logo_twitter.png" />
	<meta name="twitter:image:width" content="801" />
	<meta name="twitter:image:height" content="418" />
	<meta name="twitter:image:type" content="image/png" />

	<link
		rel="icon"
		href="/assets/favicon/active/favicon.svg"
		type="image/svg+xml"
		sizes="512x512"
	/>
	<link
		rel="icon"
		href="/assets/favicon/active/favicon-16x16.png"
		type="image/"
		sizes="16x16"
	/>
	<link
		rel="icon"
		href="/assets/favicon/active/favicon-32x32.png"
		type="image/"
		sizes="32x32"
	/>
	<link
		rel="apple-touch-icon"
		href="/assets/favicon/active/apple-touch-icon.png"
		sizes="180x180"
	/>
	<link rel="manifest" href="/assets/favicon/active/site.webmanifest" />
	<link rel="sitemap" href="/sitemap-index.xml" />
</head>
